# Docker Environment Variables
# Copy this file to .env and update with your actual values

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_actual_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_actual_google_client_secret

# Production Database (for deployment)
PRODUCTION_DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Secret (generate a strong random string for production)
PRODUCTION_JWT_SECRET=your_super_secure_jwt_secret_for_production

# Optional: Override development settings
# NODE_ENV=development
# DATABASE_URL=postgresql://incantations_user:dev_password@postgres:5432/incantations_dev
